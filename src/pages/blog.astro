<BaseLayout title="Blog" description="Insights and guides on carbon management, sustainability reporting, and corporate climate strategy" currentPage="/blog">
  <!-- Hero Section -->
  <section class="w-full px-4 md:px-10 lg:px-40 py-10 flex justify-center">
    <div class="w-full max-w-[1280px]">
      <div class="flex flex-col gap-6 lg:gap-12 lg:flex-row items-center">
        <div class="w-full lg:w-3/5 bg-center bg-no-repeat aspect-video bg-cover rounded-xl shadow-lg relative overflow-hidden group" style='background-image: url("https://lh3.googleusercontent.com/aida-public/AB6AXuD51sy4HATR_PwUSsyvFIMuzxLdNNoRl6iRx4lGbNt_6W5JWN9LKBc4i2XszK8OsBPpuI4rPiVSvysMSZpRRvM5zJh9X6ki16SNnRucrLYBmlCAskxMqskkcptUSZrn0Lbeg3B9mWUzEKmsQcT5QJ11EpiJA5tnTE3Th_gGesk0K289p0uKkYqBcSWwMBOt0pG2upXTAeFShIu3DsStYrSiywbH6t5fNPncS8b2-XWhJYDZx-9wJSkhcI0w3E7ROiq2uMf9gtHjeEo");'>
          <div class="absolute inset-0 bg-black/10 group-hover:bg-black/0 transition-all duration-500"></div>
        </div>
        <div class="flex flex-col gap-6 lg:w-2/5 justify-center">
          <div class="flex flex-col gap-3 text-left">
            <div class="flex items-center gap-2">
              <span class="px-2.5 py-1 rounded-full bg-primary text-text-main text-xs font-bold uppercase tracking-wider">Featured</span>
              <span class="text-text-muted text-sm font-medium">5 min read</span>
            </div>
            <h1 class="text-text-main dark:text-white text-3xl md:text-4xl lg:text-5xl font-black leading-tight tracking-[-0.033em]">
              Decarbonizing Supply Chains: A 2024 Guide
            </h1>
            <h2 class="text-text-main/80 dark:text-gray-300 text-base md:text-lg font-normal leading-relaxed">
              Scope 3 emissions often account for more than 70% of a business's carbon footprint. Learn actionable strategies to engage suppliers and drive reduction.
            </h2>
          </div>
          <a href="#" class="flex w-fit cursor-pointer items-center justify-center overflow-hidden rounded-lg h-12 px-6 bg-primary text-text-main text-base font-bold leading-normal tracking-[0.015em] hover:bg-primary-hover transition-all shadow-md hover:shadow-lg gap-2">
            <span>Read Full Guide</span>
            <span class="material-symbols-outlined text-xl">arrow_forward</span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Filters & Search Toolbar -->
  <section class="w-full px-4 md:px-10 lg:px-40 py-6 sticky top-[65px] z-40 bg-background-light/95 dark:bg-background-dark/95 backdrop-blur-sm border-b border-border-light dark:border-border-dark">
    <div class="w-full max-w-[1280px] mx-auto flex flex-col md:flex-row gap-4 items-center justify-between">
      <!-- Chips (Categories) -->
      <div class="w-full md:w-auto overflow-x-auto pb-2 md:pb-0 hide-scrollbar">
        <div class="flex gap-2">
          <button class="flex h-9 shrink-0 items-center justify-center gap-x-2 rounded-full bg-primary text-text-main px-5 transition-colors">
            <p class="text-sm font-bold leading-normal">All Posts</p>
          </button>
          <button class="flex h-9 shrink-0 items-center justify-center gap-x-2 rounded-full bg-surface-light dark:bg-surface-dark border border-border-light dark:border-border-dark px-5 hover:border-primary/50 transition-colors group">
            <p class="text-text-main dark:text-gray-300 text-sm font-medium leading-normal group-hover:text-primary">Industry News</p>
          </button>
          <button class="flex h-9 shrink-0 items-center justify-center gap-x-2 rounded-full bg-surface-light dark:bg-surface-dark border border-border-light dark:border-border-dark px-5 hover:border-primary/50 transition-colors group">
            <p class="text-text-main dark:text-gray-300 text-sm font-medium leading-normal group-hover:text-primary">Guides</p>
          </button>
          <button class="flex h-9 shrink-0 items-center justify-center gap-x-2 rounded-full bg-surface-light dark:bg-surface-dark border border-border-light dark:border-border-dark px-5 hover:border-primary/50 transition-colors group">
            <p class="text-text-main dark:text-gray-300 text-sm font-medium leading-normal group-hover:text-primary">Case Studies</p>
          </button>
          <button class="flex h-9 shrink-0 items-center justify-center gap-x-2 rounded-full bg-surface-light dark:bg-surface-dark border border-border-light dark:border-border-dark px-5 hover:border-primary/50 transition-colors group">
            <p class="text-text-main dark:text-gray-300 text-sm font-medium leading-normal group-hover:text-primary">Product Updates</p>
          </button>
        </div>
      </div>
      <!-- Search Input -->
      <div class="w-full md:w-auto md:min-w-[300px]">
        <label class="flex items-center h-10 w-full rounded-lg bg-surface-light dark:bg-surface-dark border border-border-light dark:border-border-dark focus-within:border-primary focus-within:ring-1 focus-within:ring-primary overflow-hidden transition-all">
          <div class="flex items-center justify-center pl-3 text-text-muted">
            <span class="material-symbols-outlined text-[20px]">search</span>
          </div>
          <input class="w-full bg-transparent border-none text-text-main dark:text-white placeholder:text-text-muted focus:ring-0 text-sm px-3" placeholder="Search articles..." type="text" />
        </label>
      </div>
    </div>
  </section>

  <!-- Blog Grid -->
  <section class="w-full px-4 md:px-10 lg:px-40 py-10 flex justify-center">
    <div class="w-full max-w-[1280px]">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {blogPosts.map((post) => (
          <article class="flex flex-col bg-surface-light dark:bg-surface-dark rounded-xl overflow-hidden shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300 border border-border-light dark:border-border-dark group">
            <div class="w-full h-56 bg-cover bg-center overflow-hidden" style={`background-image: url('${post.image}');`}>
              <div class="w-full h-full bg-black/0 group-hover:bg-black/10 transition-colors duration-300"></div>
            </div>
            <div class="p-6 flex flex-col flex-1">
              <div class="flex items-center justify-between mb-3">
                <span class="px-2 py-1 bg-primary/10 text-primary-dark dark:text-primary text-xs font-bold rounded uppercase tracking-wide">{post.category}</span>
                <span class="text-text-muted text-xs">{post.date} â€¢ {post.readTime}</span>
              </div>
              <h3 class="text-xl font-bold text-text-main dark:text-white mb-3 line-clamp-2 group-hover:text-primary transition-colors">{post.title}</h3>
              <p class="text-text-main/70 dark:text-gray-400 text-sm mb-6 line-clamp-3 flex-1">{post.excerpt}</p>
              <a class="flex items-center gap-2 text-sm font-bold text-text-main dark:text-white hover:text-primary transition-colors mt-auto" href="#">
                Read Article <span class="material-symbols-outlined text-[18px]">arrow_forward</span>
              </a>
            </div>
          </article>
        ))}
      </div>
      <!-- Load More -->
      <div class="flex justify-center mt-12 mb-12">
        <button class="flex items-center justify-center gap-2 px-6 py-3 bg-surface-light dark:bg-surface-dark border border-border-light dark:border-border-dark rounded-lg text-text-main dark:text-white font-medium hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors">
          Load More Articles
          <span class="material-symbols-outlined">expand_more</span>
        </button>
      </div>
    </div>
  </section>

  <!-- Newsletter Section -->
  <section class="w-full bg-primary/10 dark:bg-primary/5 py-16 px-4">
    <div class="max-w-[800px] mx-auto text-center flex flex-col items-center gap-6">
      <div class="size-12 rounded-full bg-primary/20 flex items-center justify-center text-primary-dark dark:text-primary mb-2">
        <span class="material-symbols-outlined text-3xl">mail</span>
      </div>
      <h2 class="text-3xl font-bold text-text-main dark:text-white">Subscribe to the Green Standard</h2>
      <p class="text-text-main/70 dark:text-gray-300 max-w-[600px]">Join 5,000+ sustainability leaders. Get the latest insights, regulatory updates, and carbon management strategies delivered to your inbox.</p>
      <form class="flex w-full max-w-[480px] gap-3 mt-4 flex-col sm:flex-row">
        <input class="flex-1 rounded-lg border-border-light dark:border-border-dark bg-surface-light dark:bg-surface-dark px-4 py-3 text-text-main dark:text-white focus:ring-2 focus:ring-primary focus:border-transparent outline-none" placeholder="Enter your work email" required type="email" />
        <button class="bg-primary hover:bg-primary-hover text-text-main font-bold py-3 px-6 rounded-lg transition-colors whitespace-nowrap" type="submit">
          Subscribe
        </button>
      </form>
      <p class="text-xs text-text-muted mt-2">We care about your data in our privacy policy.</p>
    </div>
  </section>
</BaseLayout>
