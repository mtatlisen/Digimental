---
interface Props {
  currentPage?: string;
}

const { currentPage = '' } = Astro.props;

const navLinks = [
  { href: '/platform', label: 'Platform' },
  { href: '/pricing', label: 'Pricing' },
  { href: '/customers', label: 'Customers' },
  { href: '/blog', label: 'Blog' },
  { href: '/about', label: 'About' },
];
---

<header class="sticky top-0 z-50 w-full border-b border-border-light dark:border-white/10 bg-background-light/95 dark:bg-background-dark/95 backdrop-blur-md">
  <div class="px-4 md:px-10 py-3 max-w-[1440px] mx-auto flex items-center justify-between">
    <a href="/" class="flex items-center gap-2 text-gray-900 dark:text-white">
      <div class="flex items-center justify-center size-8 rounded bg-primary/20 text-primary">
        <span class="material-symbols-outlined text-2xl">eco</span>
      </div>
      <h2 class="text-lg font-bold tracking-tight">Carbon Agent</h2>
    </a>
    
    <nav class="hidden md:flex items-center gap-8">
      {navLinks.map((link) => (
        <a 
          href={link.href}
          class={`text-sm font-medium transition-colors ${
            currentPage === link.href 
              ? 'text-primary' 
              : 'text-gray-900 dark:text-gray-200 hover:text-primary'
          }`}
        >
          {link.label}
        </a>
      ))}
    </nav>

    <div class="flex items-center gap-4">
      <a href="/contact" class="hidden md:block text-sm font-medium hover:text-primary transition-colors">
        Contact
      </a>
      <a 
        href="/demo"
        class="bg-primary hover:bg-primary-hover text-gray-900 text-sm font-bold h-10 px-5 rounded-lg transition-colors flex items-center gap-2"
      >
        <span>Request Demo</span>
      </a>
      <button class="md:hidden p-2 text-gray-900 dark:text-white" id="mobile-menu-btn">
        <span class="material-symbols-outlined">menu</span>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-border-light dark:border-white/10 bg-background-light dark:bg-background-dark">
    <nav class="flex flex-col p-4 gap-2">
      {navLinks.map((link) => (
        <a 
          href={link.href}
          class={`text-sm font-medium p-3 rounded-lg transition-colors ${
            currentPage === link.href 
              ? 'text-primary bg-primary/10' 
              : 'text-gray-900 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800'
          }`}
        >
          {link.label}
        </a>
      ))}
      <a href="/contact" class="text-sm font-medium p-3 rounded-lg text-gray-900 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800">
        Contact
      </a>
    </nav>
  </div>
</header>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
