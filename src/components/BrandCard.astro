---
import type { Brand } from '../data/catalog';

type Props = { b: Brand };
const { b } = Astro.props;
---

<a
	href={b.url}
	target="_blank"
	rel="noopener noreferrer"
	class="block rounded-xl p-6 transition-colors hover:bg-white/5 glass"
>
	<div class="mb-3 flex items-center gap-3">
		<span class="text-2xl" aria-hidden="true">{b.flag}</span>
		<div>
			<div class="font-medium text-white">{b.name}</div>
			<div class="text-xs text-slate-500">{b.country}</div>
		</div>
	</div>
	<p class="text-sm text-slate-400">{b.desc}</p>
</a>

