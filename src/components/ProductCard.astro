---
import type { Product } from '../data/catalog';

type Props = { p: Product };
const { p } = Astro.props;
---

<article class="group" data-card-brand={p.brand}>
	<div class="relative mb-3 aspect-[4/3] overflow-hidden rounded-xl bg-slate-900/40">
		<img
			src={p.img}
			alt={p.name}
			width="640"
			height="480"
			loading="lazy"
			decoding="async"
			referrerpolicy="no-referrer"
			class="h-full w-full object-contain p-4 transition-transform duration-300 group-hover:scale-105"
			onerror="this.style.opacity='0.35'"
		/>
		{p.tag ? (
			<span class="absolute right-2 top-2 rounded bg-emerald-500 px-2 py-1 text-xs text-white">
				{p.tag}
			</span>
		) : null}
	</div>
	<div class="mb-1 text-xs text-slate-500">{p.brand}</div>
	<div class="mb-2 font-medium text-white">{p.name}</div>
	<div class="flex flex-wrap gap-x-4 gap-y-1 text-xs text-slate-400">
		{p.cap !== '-' ? <span>Kapasite: {p.cap}</span> : null}
		{p.speed !== '-' ? <span>HÄ±z: {p.speed}</span> : null}
	</div>
</article>

