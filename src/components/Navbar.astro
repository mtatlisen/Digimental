---
import { NAV } from '../data/catalog';
---

<header
	data-navbar
	data-scrolled="false"
	class="fixed inset-x-0 top-0 z-50 transition-colors duration-300"
>
	<div
		class="mx-auto flex h-16 max-w-6xl items-center justify-between px-6"
	>
		<a href="/" class="flex items-center gap-2" aria-label="deposit.com.tr Ana Sayfa">
			<div class="flex h-8 w-8 items-center justify-center rounded-lg bg-emerald-500">
				<span class="text-sm font-bold text-white">D</span>
			</div>
			<span class="font-semibold text-white">
				deposit<span class="text-emerald-400">.com.tr</span>
			</span>
		</a>

		<nav class="hidden items-center gap-8 md:flex" aria-label="Ana navigasyon">
			{NAV.map((i) => (
				<a
					href={i.href}
					class="text-sm text-slate-400 transition-colors hover:text-white"
					data-astro-transition
				>
					{i.label}
				</a>
			))}
			<a
				href="/contact"
				class="rounded-lg bg-emerald-500 px-4 py-2 text-sm font-medium text-white transition-colors hover:bg-emerald-600"
				data-astro-transition
			>
				Teklif Al
			</a>
		</nav>
	</div>

	<style>
		header[data-scrolled='true'] {
			background: rgba(2, 6, 23, 0.92);
			backdrop-filter: blur(10px);
			border-bottom: 1px solid rgba(255, 255, 255, 0.06);
		}
	</style>
</header>

