---
import { PRODUCTS } from '../data/products';
import ProductCard from './ProductCard';

const featuredProducts = PRODUCTS.filter((p) => p.featured);
---

<section class="py-24 px-6 bg-[#0d0d0e]">
	<div class="max-w-7xl mx-auto">
		<div class="flex flex-col md:flex-row md:items-end justify-between gap-4 mb-12">
			<div>
				<h2 class="text-3xl md:text-4xl font-bold text-white mb-2">Öne Çıkan Ürünler</h2>
				<p class="text-gray-500">En popüler depozito iade makinelerimiz</p>
			</div>
			<a
				href="/products"
				class="text-emerald-400 hover:text-emerald-300 font-medium inline-flex items-center gap-2 transition-colors"
			>
				Tüm Ürünler
				<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
				</svg>
			</a>
		</div>

		<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
			{featuredProducts.map((p) => (
				<ProductCard product={p} client:load />
			))}
		</div>
	</div>
</section>
