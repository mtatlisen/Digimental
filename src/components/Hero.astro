<section class="min-h-screen flex items-center justify-center relative overflow-hidden">
	<!-- Background gradient overlay -->
	<div class="absolute inset-0 z-[1]">
		<div class="absolute top-0 left-1/4 w-[600px] h-[600px] bg-emerald-500/10 rounded-full blur-[150px]" />
		<div class="absolute bottom-0 right-1/4 w-[400px] h-[400px] bg-cyan-500/10 rounded-full blur-[120px]" />
	</div>

	<div class="relative z-10 max-w-5xl mx-auto px-6 text-center pt-20">
		<!-- Badge -->
		<div class="fade-in-up inline-flex items-center gap-2 bg-white/5 border border-white/10 rounded-full px-4 py-2 mb-8">
			<span class="w-2 h-2 bg-emerald-400 rounded-full animate-pulse" />
			<span class="text-gray-400 text-sm">Depozito İade Sistemleri Türkiye</span>
		</div>

		<!-- Headline -->
		<h1 class="fade-in-up fade-in-delay-1 text-5xl md:text-7xl font-bold text-white mb-6 leading-[1.1]">
			Geleceğin<br />
			<span class="gradient-text">Geri Dönüşüm</span><br />
			Teknolojisi
		</h1>

		<!-- Subtitle -->
		<p class="fade-in-up fade-in-delay-2 text-gray-400 text-lg md:text-xl max-w-2xl mx-auto mb-10 leading-relaxed">
			4 global marka, 15 farklı ürün. REVEGO, RVM Systems, Ripet ve Anker Andersen'in Türkiye distribütörüyüz.
		</p>

		<!-- CTA -->
		<div class="fade-in-up fade-in-delay-3 flex flex-col sm:flex-row gap-4 justify-center">
			<a
				href="/products"
				class="bg-emerald-500 hover:bg-emerald-400 text-black font-semibold px-8 py-4 rounded-xl transition-colors inline-flex items-center justify-center gap-2"
			>
				Ürünleri İncele
				<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
				</svg>
			</a>
			<a
				href="/contact"
				class="bg-white/5 hover:bg-white/10 border border-white/10 text-white font-semibold px-8 py-4 rounded-xl transition-colors"
			>
				İletişime Geç
			</a>
		</div>

		<!-- Stats -->
		<div class="fade-in-up fade-in-delay-4 grid grid-cols-2 md:grid-cols-4 gap-8 mt-20 pt-10 border-t border-white/5">
			<div class="text-center">
				<div class="text-3xl md:text-4xl font-bold text-white mb-1">4</div>
				<div class="text-gray-500 text-sm">Global Marka</div>
			</div>
			<div class="text-center">
				<div class="text-3xl md:text-4xl font-bold text-white mb-1">15</div>
				<div class="text-gray-500 text-sm">Farklı Ürün</div>
			</div>
			<div class="text-center">
				<div class="text-3xl md:text-4xl font-bold text-white mb-1">300/dk</div>
				<div class="text-gray-500 text-sm">Max Hız</div>
			</div>
			<div class="text-center">
				<div class="text-3xl md:text-4xl font-bold text-white mb-1">%99.5</div>
				<div class="text-gray-500 text-sm">Doğruluk</div>
			</div>
		</div>
	</div>
</section>
